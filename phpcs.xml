<?xml version="1.0"?>
<ruleset name="mi11er-wordpress">
  <description>The coding standard for my wordpress plugins and themes. Based on the WordPress-Coding-Standards</description>
  
  <file>./</file>
  <exclude-pattern>build/*</exclude-pattern>
  <exclude-pattern>.git/*</exclude-pattern>
  <exclude-pattern>vendor/*</exclude-pattern>

  <rule ref="mi11er-wp" /> 

  <rule ref='Squiz.Commenting.FunctionComment.Missing'>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <rule ref='WordPress.Files.FileName.UnderscoresNotAllowed'>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <rule ref='Generic.Files.LowercasedFilename.NotFound'>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <rule ref='Squiz.Commenting.FileComment.Missing'>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <rule ref='Squiz.Commenting.ClassComment.Missing'>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <rule ref="WordPress.NamingConventions.ValidVariableName.NotSnakeCaseMemberVar">
     <exclude-pattern>tests/*</exclude-pattern>
   </rule>

</ruleset>
